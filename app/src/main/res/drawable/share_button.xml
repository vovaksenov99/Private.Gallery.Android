<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:hardwareAccelerated="false" android:shape="oval">
                    <solid android:color="#ffffff" />
                    <stroke android:width="0.1dp" android:color="#c4c4c4" />

                    <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_share_black_24dp" android:gravity="center" />
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:hardwareAccelerated="false" android:shape="oval">
                    <solid android:color="#dcdcdc" />
                    <stroke android:width="0.1dp" android:color="#c4c4c4" />

                    <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_share_black_24dp" android:gravity="center" />
        </layer-list>
    </item>
</selector>